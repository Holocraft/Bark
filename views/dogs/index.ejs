<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <p class="heading">
        <a class="btn btn-outline-primary btn-lg" href="/dogs/new">Add a new dog</a>
    </p>
  </div>
</header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
  <% dogs.forEach(function(dog){ %>
    <div class="col-md-3 col-sm-6">
      <figure class="figure">
        <img src="<%= dog.image %>" class="img-thumbnail">
        <figcaption><%= dog.name %></h4>
      </figure>
      <p>
        <a href="/dogs/<%= dog._id %>" class="btn btn-outline-primary">More Info</a>
      </p>
    </div>
    <% }) %>
</div>

<% include ../partials/footer %>